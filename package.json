{
  "name": "rbpclock",
  "version": "0.0.0",
  "license": "MIT",
  "angular-cli": {},
  "description": "A simple Clock app based on Electron and Angular",
  "main": "main.js",
  "scripts": {
    "build": "yarn build:webpack && yarn build:electron:main",
    "build:electron:main": "tsc main.ts --outDir dist && copyfiles package.json dist && cd dist && npm install --prod && cd ..",
    "build:package:linux:armv7l": "yarn build:prod && yarn package:linux:armv7l && yarn installer:linux:armv7l",
    "build:package:linux:x64": "yarn build:prod && yarn package:linux:x64 && yarn installer:linux:x64",
    "build:package:mac": "yarn build:prod && yarn package:mac && yarn installer:mac",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "build:webpack": "copyfiles .env dist/ && webpack --display-error-details",
    "electron:dev": "yarn build && electron ./dist",
    "electron:prod": "yarn build:prod && electron ./dist",
    "installer:linux:armv7l": "electron-installer-debian --src distributions/rbpclock-linux-armv7l --dest distributions/installers --arch armv7l",
    "installer:linux:x64": "electron-installer-debian --src distributions/rbpclock-linux-x64 --dest distributions/installers --arch x64",
    "installer:mac": "electron-installer-dmg distributions/rbpclock-darwin-x64 rbpclock --out distributions/installers",
    "package:linux:armv7l": "electron-packager dist --platform linux --arch armv7l --out distributions --overwrite",
    "package:linux:x64": "electron-packager dist --platform linux --arch x64 --out distributions --overwrite",
    "package:mac": "electron-packager dist --platform darwin --out distributions --overwrite",
    "test": "rimraf coverage && karma start ./karma.conf.js",
    "ci": "yarn ci:test && yarn ci:tslint",
    "ci:test": "rimraf coverage && karma start ./karma.conf.js --single-run",
    "ci:test:phantom": "rimraf coverage && karma start ./karma.conf.js --single-run --browsers PhantomJS",
    "ci:tslint": "tslint -c ./tslint.json src/**/*.ts > reports/tslint.report"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "4.4.3",
    "@angular/compiler": "4.4.3",
    "@angular/core": "4.4.3",
    "@angular/forms": "4.4.3",
    "@angular/http": "4.4.3",
    "@angular/platform-browser": "4.4.3",
    "@angular/platform-browser-dynamic": "4.4.3",
    "@angular/router": "4.4.3",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.5",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "2.4.1",
    "dotenv": "^4.0.0",
    "electron": "^1.7.6",
    "enhanced-resolve": "3.3.0",
    "font-awesome": "^4.7.0",
    "jquery": "^1.9.1",
    "popper.js": "^1.12.6",
    "rxjs": "5.4.3",
    "weather-icons": "^1.3.2",
    "zone.js": "0.8.17"
  },
  "devDependencies": {
    "@angular/cli": "1.4.3",
    "@angular/compiler-cli": "4.4.3",
    "@ngtools/webpack": "1.7.1",
    "@types/core-js": "0.9.36",
    "@types/jasmine": "2.5.54",
    "@types/node": "7.0.7",
    "autoprefixer": "7.1.4",
    "copyfiles": "1.2.0",
    "cross-env": "^5.1.1",
    "css-loader": "0.28.7",
    "dotenv-webpack": "^1.5.4",
    "electron-installer-debian": "^0.6.0",
    "electron-packager": "9.1.0",
    "electron-reload": "^1.2.1",
    "exports-loader": "0.6.4",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "0.11.2",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "intl": "^1.2.5",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "json-loader": "0.5.7",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-phantomjs-shim": "^1.5.0",
    "karma-sourcemap-loader": "0.3.7",
    "less-loader": "4.0.5",
    "postcss-loader": "2.0.6",
    "postcss-url": "7.1.2",
    "protractor": "5.1.2",
    "raw-loader": "0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "6.0.6",
    "script-loader": "0.7.1",
    "sinon": "^4.0.1",
    "source-map-loader": "0.2.1",
    "style-loader": "0.18.2",
    "ts-node": "3.3.0",
    "tslint": "^5.8.0",
    "typescript": "2.5.2",
    "url-loader": "0.5.9",
    "webpack": "^3.6.0"
  }
}
